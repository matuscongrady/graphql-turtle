{
	"name": "graphql-turtle",
	"author": "m.congrady@gmail.com",
	"engines": {
		"node": ">= 8.0.0",
		"yarn": ">= 1.7.0"
	},
	"license": "MIT",
	"scripts": {
		"dev:client": "npx cross-env NODE_ENV=development webpack-serve --log-level warn --clipboard false --port 4000",
		"dev:api": "env-cmd api/.env.dev ts-node-dev --no-notify api/index.ts",
		"analyze": "npx rimraf dist && npx cross-env NODE_ENV=production APP_ENV=analyze webpack --hide-modules",
		"docker:build": "yarn build:api && yarn build:client && docker build -t turtle .",
		"docker:run": "docker run -v ${PWD}/turtle-config.json:/app/turtle-config.json -p 4000:4000 turtle",
		"build:client": "npx rimraf dist-client && npx cross-env NODE_ENV=production webpack",
		"build:api": "npx rimraf dist-api && npx tsc --outDir dist-api -p 'tsconfig.api.json'",
		"test:docker:dist": "yarn docker:build && yarn docker:run"
	},
	"dependencies": {
		"antd": "^3.10.1",
		"apollo-link-http": "^1.5.5",
